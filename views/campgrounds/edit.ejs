<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit <%=campground.name%></h1>
		<div style="width: 30%; margin: 25px auto;  ">
			<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" name="camp[name]" type="text" value= "<%=campground.name%>">
				</div>
				<div class="form-group">
					<input class="form-control" name="camp[price]" type="number" value="<%=campground.price%>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" name="camp[image]" type="text" value= "<%=campground.image%>">
				</div>
				<div class="form-group">
					 <textarea class="form-control" name="camp[desc]" rows="20"><%=campground.desc%></textarea>
					<!-- <input class="form-control" name="camp[desc]" type="text" value= "<%=campground.desc%>"> -->
				</div>				
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
				</div>	
			</form>
			<a href="/campgrounds/<%=campground._id%>">Go Back</a>
		</div>
	</div>

</div>


<% include ../partials/footer %>